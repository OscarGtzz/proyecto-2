<% include partials/_header %>

<div class="card">
  <div class="card-body">
    <form action="/edit/<%= task._id %>" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="title" placeholder="Usuario" value="<%= task.title %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="date" placeholder="Fecha" value="<%= task.date %>">
      </div>
      <div class="form-group">
        <textarea class="form-control" name="description" cols="80"
          placeholder="Actividad"
          ><%= task.description %></textarea>
      </div>

      <button class="btn btn-primary" type="submit">
        Actualizar 
      </button>
    </form>
  </div>
</div>     

<% include partials/_footer%>
